<UserControl x:Class="UserControlBinding.SingleUserControlBinding.ViewModel.DPViewModelUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UserControlBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
		<StackPanel Orientation="Vertical">
			<TextBlock x:Name="txtBlockHeadline" Text="{x:Bind ViewModel.TextToShow, Mode=OneWay}"/>
			<Button x:Name="btnCalc" Content="Calculate" Click="BtnCalc_OnClick"></Button>
		</StackPanel>
	</Grid>
</UserControl>
